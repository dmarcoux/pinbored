  <body class="lg:container lg:mx-auto">
    <nav class="p-2 border-b-2 rounded border-green-700">
      <ul class="divide-x-2 divide-green-700">
        <%= link_to("Bookmarks", root_path) %>
      </ul>
    </nav>
    <%= yield %>
  </body>
</html>
